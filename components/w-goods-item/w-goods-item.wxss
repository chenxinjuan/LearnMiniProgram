.goods-item{
  text-align: center;
  color:#333333;
  padding-bottom: 90rpx;
}
.img{
  width:100%;
  border-radius: 10rpx;
}
.desc-info{
  position: absolute;
  left:0;
  right:0;
  bottom: 5rpx;
}
.title{
  font-size:28rpx;
  white-space:nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.info{
  font-size:28rpx;
}
.price{
  color:#ff5777;
}
.icon{
  width:30rpx;
  height:30rpx;
  padding:0 6rpx 0 10rpx;
  position: relative;
  top:4rpx;
}
